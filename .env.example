# NotionPageDb Migration System Configuration
# Copy this file to .env and fill in your values

# Notion Configuration
NOTION_API_KEY=your-notion-api-key
NOTION_SOURCE_PAGE_ID=1ab7ef86-a5ad-81ab-a4cb-f8b8f37ec491
NOTION_TARGET_DATABASE_ID=your-target-database-id
NOTION_RATE_LIMIT_DELAY=350

# AI Service Configuration
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_IMAGE_MODEL=dall-e-3
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Storage Configuration - Cloudflare R2
# The system is configured to work with Cloudflare R2 by default
STORAGE_PROVIDER=r2
STORAGE_ACCESS_KEY_ID=your-r2-access-key-id
STORAGE_SECRET_ACCESS_KEY=your-r2-secret-access-key
STORAGE_ACCOUNT_ID=your-r2-account-id
STORAGE_BUCKET_NAME=your-r2-bucket-name
STORAGE_BASE_URL=your-r2-public-url
STORAGE_REGION=auto
STORAGE_USE_PRESIGNED_URLS=false

# Legacy R2 Environment Variables (supported for backward compatibility)
# R2_ACCESS_KEY_ID=your-r2-access-key-id
# R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
# R2_ACCOUNT_ID=your-r2-account-id
# R2_BUCKET_NAME=your-r2-bucket-name
# R2_PUBLIC_URL=your-r2-public-url

# Example values:
# NOTION_API_KEY=ntn_123456789abcdef...
# NOTION_SOURCE_PAGE_ID=d5e4e5143d2c4a6fa8ca3ab2f162c22c
# NOTION_TARGET_DATABASE_ID=1ab7ef86-a5ad-81ab-a4cb-f8b8f37ec491
# AI_API_KEY=sk-abcdefghijklmnopqrstuvwxyz
# STORAGE_ACCESS_KEY_ID=abc1234567890
# STORAGE_SECRET_ACCESS_KEY=abcdef1234567890abcdef1234567890
# STORAGE_ACCOUNT_ID=abcdef1234567890abcdef1234567890
# STORAGE_BUCKET_NAME=my-website-images
# STORAGE_BASE_URL=https://pub-abc1234.r2.dev
# STORAGE_REGION=auto 